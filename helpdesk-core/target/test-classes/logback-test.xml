<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Appender console per the test -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Specific configuration per HelpdeskEngine - only ERROR and more severe -->
    <logger name="cloud.contoterzi.helpdesk.core.engine.HelpdeskEngine" level="ERROR" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>

    <!-- General configuration for the helpdesk package - only INFO and more severe -->
    <logger name="cloud.contoterzi.helpdesk" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>

    <!-- Root logger - only WARNING and more severe for all the rest -->
    <root level="WARN">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>